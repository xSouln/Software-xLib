<UserControl x:Class="xLibV100.UI.ViewElements.BitFieldButtonViewElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Height="25" Content="{Binding StateName}" Command="{Binding ClickCommand}">
            <Button.Style>
                <Style TargetType="Button" BasedOn='{StaticResource ButtonStyle1}'>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding FlagIsEnabled, RelativeSource={RelativeSource Self}}" Value="True">
                            <Setter Property="Background" Value="#FF641818"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding FlagIsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                            <Setter Property="Background" Value="#FF21662A"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>
