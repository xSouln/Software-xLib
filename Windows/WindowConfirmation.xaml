<Window x:Class="xLibV100.xWindows.WindowConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xLibV100.xWindows"
        mc:Ignorable="d"        
        Title="{Binding Request}" Height="175" MinHeight="175" MaxHeight="175" MinWidth="410" MaxWidth="410" Width="410" Background="#FF3F3F46">
    <Grid>
        <Button x:Name="ButAccept" Template="{DynamicResource ButtonTemplate1}" Content="Accept" Margin="20,80,210,0" FontSize="18" Foreground="#FFDEC316" Background="#FF494849" BorderBrush="#FF834545" Height="40" VerticalAlignment="Top" Click="Accept_Click"/>
        <Button x:Name="ButCancel" Template="{DynamicResource ButtonTemplate1}" Content="Cancel" Margin="210,80,20,0" FontSize="18" Foreground="#FFDEC316" Background="#FF494849" BorderBrush="#FF834545" Height="40" VerticalAlignment="Top" Click="Cancel_Click"/>
        <Label Content="{Binding Note}" HorizontalContentAlignment="Center" Foreground="#FFDEC316" Margin="0,25,0,0" VerticalAlignment="Top" FontSize="18"/>
    </Grid>
</Window>
